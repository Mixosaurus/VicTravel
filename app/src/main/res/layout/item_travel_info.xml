<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_travel_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/v_divider_travel"
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/colorDivider"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_info_initiator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_divider_travel"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="标题"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/iv_info_initiator"
                app:layout_constraintTop_toBottomOf="@+id/v_divider_travel" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="22dp"
                android:text="地点"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_divider_travel" />

            <TextView
                android:id="@+id/tv_contect"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="给Grid方式排列的RecyclerView添加间距 - CSDN博客自定义RecyclerView.ItemDecoration,实现Item的等间距分割...-简书自定义RecyclerView.ItemDecoration,实现Item的等间距分割...-简书"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_info_initiator" />

            <Button
                android:id="@+id/btn_join_travel"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="加入"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contect" />

            <TextView
                android:id="@+id/tv_initiator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="发起人名称"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_info_initiator"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>