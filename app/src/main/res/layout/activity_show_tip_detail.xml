<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorTitle"
        android:background="#55addf"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_hi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/btn_rounded_rectangle"
        android:text="打招呼"
        android:textSize="@dimen/text_size_large"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_view_info"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_view_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/btn_rounded_rectangle"
        android:text="详细资料"
        android:textSize="@dimen/text_size_large"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_hi" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_Tip_detail"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tv_tip_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/colorTitle"
            />

    </android.support.v7.widget.Toolbar>


</android.support.constraint.ConstraintLayout>
